<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView 
            android:id="@+id/checkout_line_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="2dp" 
            android:text="@string/checkout_line_text"
            android:layout_gravity="center_vertical"
            android:gravity="center" />
        
        <EditText 
            android:id="@+id/checkout_line_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_gravity="center_vertical"
            android:ems="10">
        </EditText>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView 
            android:id="@+id/checkout_city_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="2dp" 
            android:text="@string/checkout_city_text"
            android:layout_gravity="center_vertical"
            android:gravity="center" />
        
        <EditText 
            android:id="@+id/checkout_city_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_gravity="center_vertical"
            android:ems="7">
        </EditText>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView 
            android:id="@+id/checkout_zip_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="2dp"
            android:text="@string/checkout_zip_text"
            android:layout_gravity="center_vertical"
            android:gravity="center" />
        
        <EditText 
            android:id="@+id/checkout_zip_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_gravity="center_vertical"
            android:ems="4">
        </EditText>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView 
            android:id="@+id/checkout_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="2dp"
            android:text="@string/checkout_state_text"
            android:layout_gravity="center_vertical"
            android:gravity="center" />
        
        <EditText 
            android:id="@+id/checkout_state_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_gravity="center_vertical"
            android:ems="7">
        </EditText>
        
    </LinearLayout>

</LinearLayout>
